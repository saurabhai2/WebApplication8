@model WebApplication8.Models.KnowlageCentre;
@{
    ViewData["Title"] = "EditKnowlages";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div>
    @using (Html.BeginForm("EditKnowlage", "Blog", FormMethod.Post, new { @enctype = "multipart/form-data", id = Model.Id }))
    {
        <div id="HomePage">
            <h5 sTyle="display:block" class="Metaheading">Edit KnowlageCenter</h5>
            <hr />
            <div class="col-sm-8">
                <input type="text" name="Id" id="Index_input" value="@Model.Id" style="width:20vw" hidden />
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Category</h6>
                </div>
                <div class="col-sm-3">
                    <input type="text" name="Category" id="Index_input" value="@Model.Category" style="width:18vw" required />
                </div>
                <div class="col-sm-1">
                    <h6 style="font-weight:400">Category line</h6>
                </div>
                <div class="col-sm-5">
                    <input type="text" name="CetegoryLine" value="@Model.CetegoryLine" id="Index_input" style="width:25vw" required />
                </div>
            </div>
            <div class="row" style=" margin-top:1vh">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Category Title</h6>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Title" value="@Model.Title" id="Index_input" style="width:50vw" required />
                </div>
            </div>
            <div class="row" style="margin-top:1vh">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Category Description</h6>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Meta" value="@Model.Meta" id="Meta_Index_input" style="width:50vw" required />
                </div>
            </div>
            <div class="row" style="margin-top:1vh">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Category Schema</h6>
                </div>
                <div class="col-sm-8">
                    <textarea style="width:50vw;height:20vh" name="Schema" id="Schema_Index_text" name="Description" required>@Html.Raw(Model.Schema)</textarea>
                </div>
            </div>
            <div class="row" style=" margin-top:2vh">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Category Heading</h6>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="MainHeading" value="@Model.MainHeading" id="Meta_Index_input" style="width:50vw" required />
                </div>
            </div>

            <div class="row" style="margin-top:2vh">
                <div class="col-sm-3">
                    <h6 style="font-weight:400">Author</h6>
                </div>
                <div class="col-sm-3">
                    <input type="text" name="author" value="@Model.author" id="Meta_Index_input" required />
                </div>
                <div class="col-sm-1">
                    <h6 style="font-weight:400">Slug Url</h6>
                </div>
                <div class="col-sm-3">
                    <input type="text" name="SlugUrl" value="@Model.SlugUrl" id="Meta_Index_input" required />
                </div>
            </div>
            <hr />
            <div style="margin-top:1vh">
                <h6 style="font-weight:400; text-align:center;display:block">Answer Body</h6>
                <hr />
                <textarea style="width:77vw;height:80vh;" name="Content" id="Blog_Body">@Html.Raw(Model.Content)</textarea>
            </div>
            <div style="text-align:right;margin-top:2vh">
                <input type="submit" class="btn button" value="Save" />
            </div>
        </div>
    }
</div>

