
@{
     
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/aos.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/stylepanel.css" rel="stylesheet" />


</head>
<body>
    <header>

        <div class="logosec">
           
            <img src="~/image/logo.webp" class=" menuicn" style="height:7vh"
                 id="menuicn"
                 alt="menu-icon" />
                 
        </div>
        <h3 style="margin-left:22vw; margin-top:0.5vh;opacity: 0.6">@ViewBag.heading</h3>
        <div class="searchbar">
            <input type="text"
                   placeholder="Search">
            <div class="searchbtn">
                <img src="~/image/Searchicon.png"
                     class="icn srchicn"
                     alt="search-icon">
            </div>
        </div>

        <div class="message">
            <div class="circle"></div>
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183322/8.png"
                 class="icn"
                 alt="">
            <div class="dp">
                <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210180014/profile-removebg-preview.png"
                     class="dpicn"
                     alt="dp">
            </div>
        </div>

    </header>
    <div class="main-container">
        <div class="navcontainer">
            <nav class="nav">
                <div class="nav-upper-options">
                    <a href="@Url.Action("Dashboard", "Admin" ,new{r=@ViewBag.Number})" style="text-decoration:none">
                        <div class="nav-option option1">
                            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210182148/Untitled-design-(29).png"
                                    class="nav-img"
                                    alt="dashboard">
                            <h3 style="font-size:1rem">Dashboard</h3>

                        </div>
                    </a>
                    
                    <a href="@Url.Action("Articles", "Admin" ,new{r=@ViewBag.Number})" style="text-decoration:none">
                       <div class="option2 nav-option">
                          <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183322/9.png"
                             class="nav-img"
                             alt="articles">
                            <h3 style="font-size:1rem">Articles</h3>
                       </div>       
                    </a>

                    <a href="@Url.Action("Tittle", "Admin" ,new{r=@ViewBag.Number})" style="text-decoration:none">
                        <div class="nav-option option3">
                            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183320/5.png"
                                 class="nav-img"
                                 alt="report">
                            <h3 style="font-size:1rem">Tittle</h3>
                        </div>
                    </a>

                    <div class="nav-option option4">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/6.png"
                             class="nav-img"
                             alt="institution">
                        <h3 style="font-size:1rem"> Metadata</h3>
                    </div>
                   
                    <a href="@Url.Action("Inbox", "Email" ,new{r=@ViewBag.Number})" style="text-decoration:none">
                        <div class="nav-option option5">
                            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183323/10.png"
                                 class="nav-img"
                                 alt="blog">
                            <h3 style="font-size:1rem">Inbox</h3>
                        </div>
                    </a>
                    
                    <a href="@Url.Action("FormData", "Admin" ,new{r=@ViewBag.Number})" style="text-decoration:none">
                        <div class="nav-option option6">
                            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183320/4.png"
                                 class="nav-img"
                                 alt="settings">
                            <h3 style="font-size:1rem">Settings</h3>
                        </div>
                    </a>

                    

                    <div class="nav-option logout">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/7.png"
                             class="nav-img"
                             alt="logout">
                        <h3 style="font-size:1rem">Logout</h3>
                    </div>
                </div>
            </nav>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
       
    <footer style="text-align:center">
        <div>version : 1.0.0.1</div>
    </footer>
</body>
</html>
