@model WebApplication8.Models.BlogPost;
@{
    
    ViewData["Title"] = Model.Title;
    ViewData["Meta"] = Model.Meta;
    ViewData["Schema"] = Model.Schema;
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container py-5">

        <div class="row mx-5 px-5">
            <div class="col-md-12 col-sm-12  text-justify">


                <h1 class="font-weight-bold pb-2 text-center">
                    @Model.MainHeading
                </h1>
                <div class="text-center">
                    <img src="@Url.Content(Model.FeatureImagePath)" class="img-fluid mx-auto"
                         alt="Empowering-Customer-Support">
                </div>

                <div class="blogcontentui">
                    <div class="blogBox text-justify">
                        <section itemprop="”articleBody”" class="entry-content">

                            @Html.Raw(Model.Content)

                        </section>
                    </div>
                </div>
                <div class="form_box px-5 py-4 mt-4"
                     style="border-bottom: 3px solid #f5c11629;border-left : 3px solid #f5c11629">


                    <h5><strong>Leave a Reply</strong></h5>
                    <p class="pb-0 mb-0"> Your email address will not be published. Required fields are marked *</p>

                    <form action="~/ContactUs/LeaveReply" method="POST">
                        <div class="row ">
                            <div class="col-6">
                                <label for="inputsubject"></label>
                                <input type="text" name="Name" class="form-control" id="name" placeholder="Name">


                            </div>
                            <div class="col-6">
                                <label for="inputsubject"></label>
                                <input type="email" name="email" class="form-control" id="email"
                                       placeholder="Your Email id*">

                            </div>
                        </div>
                        <label for="exampleFormControlTextarea1" class="form-label"></label>
                        <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"
                                  placeholder="Comment"></textarea>


                        <div class="mt-3">
                            <input type="submit" class="px-5 py-2 login_button" value="Post Comment">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

